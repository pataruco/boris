{
  "name": "parliament-scrapper",
  "version": "1",
  "description": "A scrapper to collect data of each MP seating on UK Parliament",
  "main": "index.ts",
  "repository": "git@github.com:pataruco/mp-scraper-sandbox.git",
  "author": "Pedro Martin <pataruco@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@types/colors": "^1.2.1",
    "@types/node": "^11.10.4",
    "@types/puppeteer": "^1.12.1",
    "colors": "^1.3.3",
    "puppeteer": "^1.12.2",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@types/expect-puppeteer": "^3.3.1",
    "@types/jest": "^24.0.9",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "scripts": {
    "lint": "yarn tslint",
    "prettier": "yarn prettier --write",
    "scrape": "yarn ts-node index.ts",
    "test": "yarn tsc --noEmit && jest"
  },
  "lint-staged": {
    "linters": {
      "*.{ts}": [
        "yarn prettier && yarn lint",
        "git add"
      ],
      "*.{js, md}": [
        "yarn prettier",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
